<div class="page-header">
  <h3>Office #<%= @office.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Line1 address</dt>
      <dd><%= @office.line1_address %></dd>

      <dt>Line2 address</dt>
      <dd><%= @office.line2_address %></dd>

      <dt>City</dt>
      <dd><%= @office.city %></dd>

      <dt>State</dt>
      <dd><%= @office.state %></dd>

      <dt>Zip</dt>
      <dd><%= @office.zip %></dd>

      <dt>Phone</dt>
      <dd><%= @office.phone %></dd>

      <dt>Practice</dt>
      <dd>
        <% if @office.practice.present? %>
          <a href="/practices/<%= @office.practice_id %>">
            <%= @office.practice.pac_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/offices" class="btn btn-primary">
        Back
      </a>
      <a href="/offices/<%= @office.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_office/<%= @office.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
