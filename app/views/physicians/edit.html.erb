<!-- Validation failure messages -->
<% if @physician.errors.any? %>
  <% @physician.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Physician #<%= @physician.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_physician/<%= @physician.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for npi -->
      <div class="form-group">
        <label for="npi" class="control-label">
          Npi
        </label>

        <input type="text" id="npi" name="npi" placeholder="Npi" class="form-control" value="<%= @physician.npi %>">
      </div>

      <!-- Label and input for first_name -->
      <div class="form-group">
        <label for="first_name" class="control-label">
          First name
        </label>

        <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @physician.first_name %>">
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="control-label">
          Last name
        </label>

        <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @physician.last_name %>">
      </div>

      <button class="btn btn-warning">
        Update Physician
      </button>
      or
      <a href="/physicians/<%= @physician.id %>">Cancel</a>
    </form>
  </div>
</div>
